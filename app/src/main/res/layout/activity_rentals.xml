<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Rentals"
    android:background="@color/lighter_gray">

    <include layout="@layout/toolbar"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp">
    
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/rental_ic"
                android:contentDescription="@string/loading"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.45"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/main_sub_header"
                        android:gravity="center_horizontal"
                        android:text="Start date of Journey"/>

                    <TextView
                        android:id="@+id/startDate"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:hint="Select Start Date"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/button_rectangle_yellow_outline"/>


                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:layout_height="1dp"
                    android:background="@color/lighter_gray"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.45"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/main_sub_header"
                        android:gravity="center_horizontal"
                        android:text="End date of Journey"/>

                    <TextView
                        android:id="@+id/endDate"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:hint="Select End Date"
                        android:background="@drawable/button_rectangle_yellow_outline"/>


                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:layout_height="1dp"
                    android:background="@color/lighter_gray"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/main_sub_header"
                        android:gravity="center_horizontal"
                        android:text="Total Days"/>


                    <TextView
                        android:id="@+id/totalDays"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:hint="Days"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/button_rectangle_yellow_outline"/>


                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:textSize="@dimen/action_header"
                android:textColor="@color/colorPrimaryDark"
                android:text="Trip Details"/>

                <View
                    android:layout_width="110dp"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center_horizontal"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.4"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/main_header"
                        android:gravity="center_horizontal"
                        android:text="Ride Start Point"/>

                    <TextView
                        android:id="@+id/startPoint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:gravity="center"
                        android:hint="Select Ride Start Point"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/button_rectangle_yellow_outline"/>


                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:layout_height="1dp"
                    android:background="@color/lighter_gray"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.4"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/main_header"
                        android:gravity="center_horizontal"
                        android:text="Ride End Point"/>

                    <TextView
                        android:id="@+id/EndPoint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:gravity="center"
                        android:hint="Select Ride End Point"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/button_rectangle_yellow_outline"/>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:paddingStart="15dp"
                android:paddingEnd="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/action_sub_header"
                    android:text="No. of Required Seat:"/>

                <EditText
                    android:id="@+id/seatRequired"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:background="@drawable/button_rectangle_yellow_outline"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingStart="15dp"
                android:paddingEnd="10dp">

                <TextView
                    android:id="@+id/typeBus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/action_sub_header"
                    android:text="Bus Type:"/>

                <RadioGroup
                    android:id="@+id/radioGrpBusType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_toEndOf="@id/typeBus"
                    android:layout_marginStart="45dp"
                    android:theme="@style/yellowScreenTheme">

                    <RadioButton
                        android:id="@+id/radioM"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="false"
                        android:textColor="@color/black"
                        android:buttonTint="@color/yellow"
                        android:textSize="@dimen/main_header"
                        android:text="A.C." />

                    <RadioButton
                        android:id="@+id/radioF"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:layout_weight="1"
                        android:buttonTint="@color/yellow"
                        android:textColor="@color/black"
                        android:textSize="@dimen/main_header"
                        android:text="Non A.C." />
                </RadioGroup>

            </RelativeLayout>

            <Button
                android:id="@+id/submitEnquiry"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/action_sub_header"
                android:text="Submit Enquiry for Callback"
                android:textAllCaps="false"
                android:background="@drawable/button_rectangle_sign_up"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>