<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/pass_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/pass_icon"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="7dp"
        android:weightSum="2"
        android:baselineAligned="false"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/expireTag"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="@dimen/main_sub_header"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="Expired"
                    android:background="@drawable/button_rectangle_sign_up"/>

            <TextView
                android:id="@+id/passRidesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/action_sub_header"
                android:layout_marginTop="50dp"
                android:layout_marginStart="80dp"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/passRidesValidity"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="@dimen/main_header"
                android:layout_marginTop="60dp"
                android:layout_marginStart="65dp"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/offeredRide"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/cat_grad"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textColor="@color/white"
                android:layout_marginTop="35dp"
                android:layout_marginStart="40dp"
                android:gravity="center"
                android:textSize="@dimen/main_sub_header"/>

            <TextView
                android:id="@+id/perRidePrize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/action_header"
                android:textColor="@color/black"
                android:layout_marginTop="90dp"
                android:layout_marginStart="30dp"/>

        </RelativeLayout>

   </LinearLayout>

</RelativeLayout>