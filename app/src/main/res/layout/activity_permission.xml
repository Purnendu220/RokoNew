<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.PermissionActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageDesc"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/logo_roko"
                android:contentDescription="@string/loading"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:weightSum="6">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/main_header"
                    android:textColor="@color/black"
                    android:layout_marginTop="7dp"
                    android:text="1."
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5.5"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <WebView
                        android:id="@+id/tvPermissionOne"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/main_header"
                        tools:ignore="WebViewLayout" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".8dp"
                        android:background="@color/colorPrimary"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/main_header"
                    android:textColor="@color/black"
                    android:layout_marginTop="7dp"
                    android:text="2."
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5.5"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <WebView
                        android:id="@+id/tvPermissionTwo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/main_header"
                        tools:ignore="WebViewLayout" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".8dp"
                        android:background="@color/colorPrimary"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/main_header"
                    android:textColor="@color/black"
                    android:layout_marginTop="7dp"
                    android:text="3."
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5.5"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <WebView
                        android:id="@+id/tvPermissionThree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/main_header"
                        tools:ignore="WebViewLayout" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".8dp"
                        android:background="@color/colorPrimary"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/main_header"
                    android:textColor="@color/black"
                    android:layout_marginTop="7dp"
                    android:text="4."
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5.5"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <WebView
                        android:id="@+id/tvPermissionFour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/main_header"
                        tools:ignore="WebViewLayout" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".8dp"
                        android:background="@color/colorPrimary"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/main_header"
                    android:textColor="@color/black"
                    android:layout_marginTop="7dp"
                    android:text="5."
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5.5"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <WebView
                        android:id="@+id/tvPermissionFive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/main_header"
                        tools:ignore="WebViewLayout" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".8dp"
                        android:background="@color/colorPrimary"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <Button
        android:id="@+id/buttonPermission"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/yellow"
        android:textColor="@color/white"
        android:textSize="@dimen/main_header"
        android:gravity="center"
        android:text="Give Permissions to serve better"/>

</RelativeLayout>